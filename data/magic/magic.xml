<?xml version="1.0" encoding="UTF-8" ?>

<magic>
    <elements>
        <element name="Normal">
            <compatible>
                <element>Normal</element>
                <element>Fire</element>
                <element>Ice</element>
                <element>Water</element>
                <element>Light</element>
                <element>Dark</element>
            </compatible>
        </element>
        <element name="Fire">
            <strong>
                <element>Ice</element>
            </strong>
            <weak>
                <element>Fire</element>
                <element>Water</element>
            </weak>
        </element>
        <element name="Ice">
            <strong>
                <element>Water</element>
            </strong>
            <weak>
                <element>Fire</element>
                <element>Ice</element>
            </weak>
        </element>
        <element name="Water">
            <strong>
                <element>Fire</element>
            </strong>
            <weak>
                <element>Water</element>
                <element>Ice</element>
            </weak>
        </element>
        <element name="Light" />
